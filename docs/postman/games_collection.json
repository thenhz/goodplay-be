{
  "info": {
    "name": "GoodPlay Games API (GOO-8, GOO-9, GOO-10)",
    "description": "Game engine, session management, and tournament system API endpoints\n\nThis collection covers:\n- Game management and plugin system\n- Game session lifecycle and cross-device sync\n- Game modes and scheduling\n- Direct challenges and matchmaking\n- Global teams and tournaments\n- Universal scoring system\n\n## Environment Variables\n- `{{baseUrl}}` - API base URL\n- `{{token}}` - JWT access token\n- `{{gameId}}` - Game ID for testing\n- `{{sessionId}}` - Session ID for testing\n- `{{challengeId}}` - Challenge ID for testing\n- `{{teamId}}` - Team ID for testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "games-api-collection"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "gameId",
      "value": "64f8b2c1234567890abcdef3",
      "type": "string"
    },
    {
      "key": "sessionId",
      "value": "64f8b2c1234567890abcdef4",
      "type": "string"
    },
    {
      "key": "challengeId",
      "value": "64f8b2c1234567890abcdef5",
      "type": "string"
    },
    {
      "key": "teamId",
      "value": "64f8b2c1234567890abcdef6",
      "type": "string"
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Game Management",
      "item": [
        {
          "name": "Get Available Games",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/games?category=puzzle&page=1&per_page=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games"],
              "query": [
                {
                  "key": "category",
                  "value": "puzzle",
                  "description": "Filter by game category"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "per_page",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Game Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/games/{{gameId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "{{gameId}}"]
            }
          }
        },
        {
          "name": "Get Game Categories",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/games/categories",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "categories"]
            }
          }
        }
      ]
    },
    {
      "name": "Game Sessions",
      "item": [
        {
          "name": "Start Game Session",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"game_id\": \"{{gameId}}\",\n  \"device_info\": {\n    \"platform\": \"web\",\n    \"device_type\": \"desktop\",\n    \"app_version\": \"1.0.0\",\n    \"user_agent\": \"Mozilla/5.0...\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/games/sessions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "sessions"]
            }
          }
        },
        {
          "name": "Get Session Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/games/sessions/{{sessionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "sessions", "{{sessionId}}"]
            }
          }
        },
        {
          "name": "Update Session",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"score\": 1500,\n  \"level\": 3,\n  \"game_state\": {\n    \"current_level\": 3,\n    \"lives\": 2,\n    \"powerups\": [\"speed\", \"shield\"]\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/games/sessions/{{sessionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "sessions", "{{sessionId}}"]
            }
          }
        },
        {
          "name": "Pause Session",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/games/sessions/{{sessionId}}/pause",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "sessions", "{{sessionId}}", "pause"]
            }
          }
        },
        {
          "name": "Resume Session",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/games/sessions/{{sessionId}}/resume",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "sessions", "{{sessionId}}", "resume"]
            }
          }
        },
        {
          "name": "End Session",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"final_score\": 2500,\n  \"completed\": true,\n  \"achievements\": [\"first_level\", \"speed_demon\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/games/sessions/{{sessionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "games", "sessions", "{{sessionId}}"]
            }
          }
        }
      ]
    },
