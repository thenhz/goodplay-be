{
  "info": {
    "_postman_id": "8c7ad19e-7103-4800-8a4e-a709a396e617",
    "name": "GoodPlay Leaderboards API",
    "description": "Leaderboards and impact scoring API endpoints\n\nThis collection covers:\n- Impact score calculation and tracking\n- Leaderboard rankings (global, friends, teams)\n- Privacy settings for leaderboard participation\n- Administrative leaderboard management\n- Ranking statistics and analytics\n\n## Environment Variables\n- `{{baseUrl}}` - API base URL\n- `{{access_token}}` - JWT access token\n- `{{user_id}}` - Target user ID\n- `{{leaderboard_type}}` - Leaderboard type",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Impact Score Management",
      "item": [
        {
          "name": "Get My Impact Score",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/impact-score/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "impact-score", "me"]
            }
          }
        },
        {
          "name": "Get User Impact Score",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/impact-score/{{user_id}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "impact-score", "{{user_id}}"]
            }
          }
        },
        {
          "name": "Get Impact Score History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/impact-score/history?days=30&include_details=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "impact-score", "history"],
              "query": [
                {"key": "days", "value": "30"},
                {"key": "include_details", "value": "true"}
              ]
            }
          }
        },
        {
          "name": "Refresh Impact Score",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/impact-score/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "impact-score", "refresh"]
            }
          }
        }
      ]
    },
    {
      "name": "Leaderboards",
      "item": [
        {
          "name": "Get All Leaderboards",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/leaderboards?include_user_position=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "leaderboards"],
              "query": [
                {"key": "include_user_position", "value": "true"}
              ]
            }
          }
        },
        {
          "name": "Get Specific Leaderboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/leaderboards/{{leaderboard_type}}?limit=20&include_user_position=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "leaderboards", "{{leaderboard_type}}"],
              "query": [
                {"key": "limit", "value": "20"},
                {"key": "include_user_position", "value": "true"}
              ]
            }
          }
        },
        {
          "name": "Get Leaderboard Top Rankings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/leaderboards/{{leaderboard_type}}/top?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "leaderboards", "{{leaderboard_type}}", "top"],
              "query": [
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get Friends Leaderboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/leaderboards/friends?leaderboard_type={{leaderboard_type}}&limit=15",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "leaderboards", "friends"],
              "query": [
                {"key": "leaderboard_type", "value": "{{leaderboard_type}}"},
                {"key": "limit", "value": "15"}
              ]
            }
          }
        },
        {
          "name": "Get My Leaderboard Positions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/leaderboards/my-positions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "leaderboards", "my-positions"]
            }
          }
        },
        {
          "name": "Get Leaderboard Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/leaderboards/{{leaderboard_type}}/statistics",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "leaderboards", "{{leaderboard_type}}", "statistics"]
            }
          }
        }
      ]
    },
    {
      "name": "Privacy Settings",
      "item": [
        {
          "name": "Get Leaderboard Privacy Settings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/privacy/leaderboard-participation",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "privacy", "leaderboard-participation"]
            }
          }
        },
        {
          "name": "Update Leaderboard Privacy Settings",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"global_leaderboards\": true,\n    \"friends_leaderboards\": true,\n    \"team_leaderboards\": true,\n    \"show_detailed_stats\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/social/privacy/leaderboard-participation",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "privacy", "leaderboard-participation"]
            }
          }
        }
      ]
    },
    {
      "name": "Rankings System",
      "item": [
        {
          "name": "Get Rankings Health",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/rankings/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "rankings", "health"]
            }
          }
        },
        {
          "name": "Trigger Rankings Update",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/rankings/trigger-update",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "rankings", "trigger-update"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Operations",
      "item": [
        {
          "name": "Recalculate Impact Scores (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"target_users\": \"all\",\n    \"recalculate_history\": false,\n    \"days_back\": 30\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/social/admin/impact-scores/recalculate",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "admin", "impact-scores", "recalculate"]
            }
          }
        },
        {
          "name": "Refresh Leaderboards (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"leaderboard_types\": [\"global_impact\", \"weekly_donations\"],\n    \"force_refresh\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/social/admin/leaderboards/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "admin", "leaderboards", "refresh"]
            }
          }
        },
        {
          "name": "Get System Statistics (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/social/admin/system/stats",
              "host": ["{{baseUrl}}"],
              "path": ["api", "social", "admin", "system", "stats"]
            }
          }
        }
      ]
    }
  ],
